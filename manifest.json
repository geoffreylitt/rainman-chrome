{
  "manifest_version": 2,

  "name": "Rainman",
  "description": "Beautiful context for Internet reading",
  "version": "0.1",

  "permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": ["js/button_handler.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Read this page Rainman-style",
    "default_icon": "icon.png"
  },

  "web_accessible_resources": [
    "template.html",
    "js/rainman.js",
    "js/lib/angular.js"
  ]

}